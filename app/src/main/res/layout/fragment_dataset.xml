<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F0F4F8"
    tools:context=".DatasetFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:clipChildren="false"
        android:clipToPadding="false"
        android:paddingBottom="16dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="16dp"
                app:cardElevation="4dp"
                android:layout_marginHorizontal="4dp"
                android:layout_marginBottom="20dp">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="20dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Statistik Utama"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:textColor="#1A237E"
                        android:layout_marginBottom="16dp"/>

                    <GridLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:columnCount="2"
                        android:rowCount="2">
                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_columnWeight="1"
                            android:gravity="center_vertical"
                            android:paddingVertical="8dp">
                            <ImageView
                                android:layout_width="24dp"
                                android:layout_height="24dp"
                                android:src="@drawable/ic_menu_sort_by_size"
                                app:tint="#546E7A"
                                android:layout_marginEnd="8dp"/>
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Total Baris: 62,630"
                                android:textColor="#333"/>
                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_columnWeight="1"
                            android:gravity="center_vertical"
                            android:paddingVertical="8dp">
                            <ImageView
                                android:layout_width="24dp"
                                android:layout_height="24dp"
                                android:src="@drawable/ic_menu_view"
                                app:tint="#546E7A"
                                android:layout_marginEnd="8dp"/>
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Total Fitur: 14"
                                android:textColor="#333"/>
                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_columnWeight="1"
                            android:gravity="center_vertical"
                            android:paddingVertical="8dp">
                            <ImageView
                                android:layout_width="24dp"
                                android:layout_height="24dp"
                                android:src="@drawable/ic_menu_report_image"
                                app:tint="#4CAF50"
                                android:layout_marginEnd="8dp"/>
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Missing Values: 0"
                                android:textColor="#333"/>
                        </LinearLayout>
                    </GridLayout>
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="16dp"
                app:cardElevation="4dp"
                android:layout_marginHorizontal="4dp"
                android:layout_marginBottom="20dp">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="20dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Distribusi Kelas Target (Fire Alarm)"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:textColor="#1A237E"
                        android:layout_marginBottom="16dp"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="• Kelas 1 (Asap Terdeteksi): 71.5%"
                        android:layout_marginBottom="4dp"
                        android:textColor="#D32F2F"
                        android:textStyle="bold"/>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="(44,757 sampel)"
                        android:textSize="12sp"
                        android:textColor="#666"
                        android:paddingStart="16dp"
                        android:layout_marginBottom="12dp"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="• Kelas 0 (Normal): 28.5%"
                        android:layout_marginBottom="4dp"
                        android:textColor="#388E3C"
                        android:textStyle="bold"/>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="(17,873 sampel)"
                        android:textSize="12sp"
                        android:paddingStart="16dp"
                        android:textColor="#666"/>
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Fitur Dataset"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="#1A237E"
            android:layout_marginStart="20dp"
            android:layout_marginBottom="12dp"/>

        <HorizontalScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:scrollbars="none"
            android:paddingTop="8dp"
            android:paddingBottom="8dp">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingStart="12dp"
                android:paddingEnd="12dp"
                android:gravity="center_vertical">

                <com.google.android.material.card.MaterialCardView
                    android:layout_width="260dp"
                    android:layout_height="160dp"
                    android:layout_marginEnd="10dp"
                    app:cardCornerRadius="12dp"
                    app:cardElevation="4dp">
                    <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content" android:orientation="vertical" android:padding="16dp">
                        <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="UTC (Timestamp)" android:textSize="16sp" android:textStyle="bold" android:textColor="#3f51b5"/>
                        <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="8dp" android:text="Waktu data dicatat dalam format Unix." android:lineSpacingExtra="4dp" android:textColor="#333333"/>
                        <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="8dp" android:text="Satuan: Detik | Tipe: Integer" android:textSize="12sp" android:textStyle="italic" android:textColor="#666666"/>
                    </LinearLayout>
                </com.google.android.material.card.MaterialCardView>

                <com.google.android.material.card.MaterialCardView
                    android:layout_width="260dp"
                    android:layout_height="160dp"
                    android:layout_marginEnd="10dp"
                    app:cardCornerRadius="12dp"
                    app:cardElevation="4dp">
                    <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content" android:orientation="vertical" android:padding="16dp">
                        <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Temperature[C]" android:textSize="16sp" android:textStyle="bold" android:textColor="#3f51b5"/>
                        <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="8dp" android:text="Suhu lingkungan sekitar, indikator awal kebakaran." android:lineSpacingExtra="4dp" android:textColor="#333333"/>
                        <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="8dp" android:text="Satuan: °C | Tipe: Float" android:textSize="12sp" android:textStyle="italic" android:textColor="#666666"/>
                    </LinearLayout>
                </com.google.android.material.card.MaterialCardView>

                <com.google.android.material.card.MaterialCardView
                    android:layout_width="260dp"
                    android:layout_height="160dp"
                    android:layout_marginEnd="10dp"
                    app:cardCornerRadius="12dp"
                    app:cardElevation="4dp">
                    <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content" android:orientation="vertical" android:padding="16dp">
                        <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Humidity[%]" android:textSize="16sp" android:textStyle="bold" android:textColor="#3f51b5"/>
                        <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="8dp" android:text="Tingkat kelembaban udara relatif di lingkungan." android:lineSpacingExtra="4dp" android:textColor="#333333"/>
                        <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="8dp" android:text="Satuan: % | Tipe: Float" android:textSize="12sp" android:textStyle="italic" android:textColor="#666666"/>
                    </LinearLayout>
                </com.google.android.material.card.MaterialCardView>

                <com.google.android.material.card.MaterialCardView
                    android:layout_width="260dp"
                    android:layout_height="160dp"
                    android:layout_marginEnd="10dp"
                    app:cardCornerRadius="12dp"
                    app:cardElevation="4dp">
                    <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content" android:orientation="vertical" android:padding="16dp">
                        <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="TVOC[ppb]" android:textSize="16sp" android:textStyle="bold" android:textColor="#3f51b5"/>
                        <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="8dp" android:text="Konsentrasi total senyawa organik volatil di udara." android:lineSpacingExtra="4dp" android:textColor="#333333"/>
                        <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="8dp" android:text="Satuan: ppb | Tipe: Integer" android:textSize="12sp" android:textStyle="italic" android:textColor="#666666"/>
                    </LinearLayout>
                </com.google.android.material.card.MaterialCardView>

                <com.google.android.material.card.MaterialCardView
                    android:layout_width="260dp"
                    android:layout_height="160dp"
                    android:layout_marginEnd="10dp"
                    app:cardCornerRadius="12dp"
                    app:cardElevation="4dp">
                    <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content" android:orientation="vertical" android:padding="16dp">
                        <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="eCO2[ppm]" android:textSize="16sp" android:textStyle="bold" android:textColor="#3f51b5"/>
                        <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="8dp" android:text="Konsentrasi Karbon Dioksida (CO2) setara di udara." android:lineSpacingExtra="4dp" android:textColor="#333333"/>
                        <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="8dp" android:text="Satuan: ppm | Tipe: Integer" android:textSize="12sp" android:textStyle="italic" android:textColor="#666666"/>
                    </LinearLayout>
                </com.google.android.material.card.MaterialCardView>

                <com.google.android.material.card.MaterialCardView
                    android:layout_width="260dp"
                    android:layout_height="160dp"
                    android:layout_marginEnd="10dp"
                    app:cardCornerRadius="12dp"
                    app:cardElevation="4dp">
                    <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content" android:orientation="vertical" android:padding="16dp">
                        <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Raw H2" android:textSize="16sp" android:textStyle="bold" android:textColor="#3f51b5"/>
                        <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="8dp" android:text="Pembacaan mentah dari sensor gas Hidrogen (H2)." android:lineSpacingExtra="4dp" android:textColor="#333333"/>
                        <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="8dp" android:text="Satuan: Nilai mentah | Tipe: Integer" android:textSize="12sp" android:textStyle="italic" android:textColor="#666666"/>
                    </LinearLayout>
                </com.google.android.material.card.MaterialCardView>

                <com.google.android.material.card.MaterialCardView
                    android:layout_width="260dp"
                    android:layout_height="160dp"
                    android:layout_marginEnd="10dp"
                    app:cardCornerRadius="12dp"
                    app:cardElevation="4dp">
                    <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content" android:orientation="vertical" android:padding="16dp">
                        <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Raw Ethanol" android:textSize="16sp" android:textStyle="bold" android:textColor="#3f51b5"/>
                        <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="8dp" android:text="Pembacaan mentah dari sensor gas Etanol." android:lineSpacingExtra="4dp" android:textColor="#333333"/>
                        <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="8dp" android:text="Satuan: Nilai mentah | Tipe: Integer" android:textSize="12sp" android:textStyle="italic" android:textColor="#666666"/>
                    </LinearLayout>
                </com.google.android.material.card.MaterialCardView>

                <com.google.android.material.card.MaterialCardView
                    android:layout_width="260dp"
                    android:layout_height="160dp"
                    android:layout_marginEnd="10dp"
                    app:cardCornerRadius="12dp"
                    app:cardElevation="4dp">
                    <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content" android:orientation="vertical" android:padding="16dp">
                        <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Pressure[hPa]" android:textSize="16sp" android:textStyle="bold" android:textColor="#3f51b5"/>
                        <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="8dp" android:text="Tekanan udara atmosfer di lingkungan." android:lineSpacingExtra="4dp" android:textColor="#333333"/>
                        <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="8dp" android:text="Satuan: hPa | Tipe: Float" android:textSize="12sp" android:textStyle="italic" android:textColor="#666666"/>
                    </LinearLayout>
                </com.google.android.material.card.MaterialCardView>

                <com.google.android.material.card.MaterialCardView
                    android:layout_width="260dp"
                    android:layout_height="160dp"
                    android:layout_marginEnd="10dp"
                    app:cardCornerRadius="12dp"
                    app:cardElevation="4dp">
                    <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content" android:orientation="vertical" android:padding="16dp">
                        <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="PM1.0" android:textSize="16sp" android:textStyle="bold" android:textColor="#3f51b5"/>
                        <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="8dp" android:text="Konsentrasi partikulat (PM) berdiameter ≤ 1.0 µm." android:lineSpacingExtra="4dp" android:textColor="#333333"/>
                        <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="8dp" android:text="Satuan: µg/m³ | Tipe: Float" android:textSize="12sp" android:textStyle="italic" android:textColor="#666666"/>
                    </LinearLayout>
                </com.google.android.material.card.MaterialCardView>

                <com.google.android.material.card.MaterialCardView
                    android:layout_width="260dp"
                    android:layout_height="160dp"
                    android:layout_marginEnd="10dp"
                    app:cardCornerRadius="12dp"
                    app:cardElevation="4dp">
                    <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content" android:orientation="vertical" android:padding="16dp">
                        <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="PM2.5" android:textSize="16sp" android:textStyle="bold" android:textColor="#3f51b5"/>
                        <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="8dp" android:text="Konsentrasi partikulat (PM) berdiameter ≤ 2.5 µm." android:lineSpacingExtra="4dp" android:textColor="#333333"/>
                        <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="8dp" android:text="Satuan: µg/m³ | Tipe: Float" android:textSize="12sp" android:textStyle="italic" android:textColor="#666666"/>
                    </LinearLayout>
                </com.google.android.material.card.MaterialCardView>

                <com.google.android.material.card.MaterialCardView
                    android:layout_width="260dp"
                    android:layout_height="160dp"
                    android:layout_marginEnd="10dp"
                    app:cardCornerRadius="12dp"
                    app:cardElevation="4dp">
                    <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content" android:orientation="vertical" android:padding="16dp">
                        <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="NC0.5" android:textSize="16sp" android:textStyle="bold" android:textColor="#3f51b5"/>
                        <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="8dp" android:text="Jumlah konsentrasi partikel berdiameter ≤ 0.5 µm." android:lineSpacingExtra="4dp" android:textColor="#333333"/>
                        <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="8dp" android:text="Satuan: Partikel / 0.1L | Tipe: Float" android:textSize="12sp" android:textStyle="italic" android:textColor="#666666"/>
                    </LinearLayout>
                </com.google.android.material.card.MaterialCardView>

                <com.google.android.material.card.MaterialCardView
                    android:layout_width="260dp"
                    android:layout_height="160dp"
                    android:layout_marginEnd="10dp"
                    app:cardCornerRadius="12dp"
                    app:cardElevation="4dp">
                    <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content" android:orientation="vertical" android:padding="16dp">
                        <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="NC1.0" android:textSize="16sp" android:textStyle="bold" android:textColor="#3f51b5"/>
                        <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="8dp" android:text="Jumlah konsentrasi partikel berdiameter ≤ 1.0 µm." android:lineSpacingExtra="4dp" android:textColor="#333333"/>
                        <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="8dp" android:text="Satuan: Partikel / 0.1L | Tipe: Float" android:textSize="12sp" android:textStyle="italic" android:textColor="#666666"/>
                    </LinearLayout>
                </com.google.android.material.card.MaterialCardView>

                <com.google.android.material.card.MaterialCardView
                    android:layout_width="260dp"
                    android:layout_height="160dp"
                    android:layout_marginEnd="10dp"
                    app:cardCornerRadius="12dp"
                    app:cardElevation="4dp">
                    <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content" android:orientation="vertical" android:padding="16dp">
                        <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="NC2.5" android:textSize="16sp" android:textStyle="bold" android:textColor="#3f51b5"/>
                        <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="8dp" android:text="Jumlah konsentrasi partikel berdiameter ≤ 2.5 µm." android:lineSpacingExtra="4dp" android:textColor="#333333"/>
                        <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="8dp" android:text="Satuan: Partikel / 0.1L | Tipe: Float" android:textSize="12sp" android:textStyle="italic" android:textColor="#666666"/>
                    </LinearLayout>
                </com.google.android.material.card.MaterialCardView>

                <com.google.android.material.card.MaterialCardView
                    android:layout_width="260dp"
                    android:layout_height="160dp"
                    app:cardCornerRadius="12dp"
                    app:cardElevation="4dp">
                    <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content" android:orientation="vertical" android:padding="16dp">
                        <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="CNT" android:textSize="16sp" android:textStyle="bold" android:textColor="#3f51b5"/>
                        <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="8dp" android:text="Penghitung sampel sederhana." android:lineSpacingExtra="4dp" android:textColor="#333333"/>
                        <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="8dp" android:text="Satuan: - | Tipe: Integer" android:textSize="12sp" android:textStyle="italic" android:textColor="#666666"/>
                    </LinearLayout>
                </com.google.android.material.card.MaterialCardView>

            </LinearLayout>
        </HorizontalScrollView>

    </LinearLayout>
</ScrollView>